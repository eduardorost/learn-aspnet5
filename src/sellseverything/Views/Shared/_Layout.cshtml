<!DOCTYPE html>
<html>
<head>
    <base href="/">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/lib/angular-material/angular-material.min.css" rel="stylesheet" />
    <link href="~/lib/ng-table/dist/ng-table.css" rel="stylesheet" />

    <title>@ViewData["Title"] - sellseverything</title>
</head>
<body ng-app="sellseverything">

    @RenderBody()

    <environment names="Development">
        <!-- Angular Libraries -->
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/angular-route/angular-route.js"></script>
        <script src="~/lib/angular-animate/angular-animate.js"></script>
        <script src="~/lib/angular-aria/angular-aria.js"></script>
        <script src="~/lib/angular-messages/angular-messages.js"></script>
        <script src="~/lib/ng-table/dist/ng-table.js"></script>

        <!-- Angular Material Library -->
        <script src="~/lib/angular-material/angular-material.js"></script>

        <!-- Aplication Scripts -->
        <script src="~/app/app.module.js" type="text/javascript"></script>
        <script src="~/app/app.route.js" type="text/javascript"></script>
        <script src="~/app/app.run.js" type="text/javascript"></script>
        
        <!-- Aplication Services Scripts -->
        <script src="~/app/services/auth.service.js"></script>
        <script src="~/app/services/auth.dataservice.js"></script>
        
        <!-- Aplication Controllers Scripts -->
        <script src="~/app/components/customers/customers.dataservice.js"></script>
        <script src="~/app/components/customers/customers.controller.js"></script>
        <script src="~/app/components/login/login.controller.js"></script>

    </environment>
    <environment names="Staging,Production">
        <!-- Angular Libraries -->
        <script src="~/lib/angular/angular.min.js"></script>
        <script src="~/lib/angular-route/angular-route.min.js"></script>
        <script src="~/lib/angular-animate/angular-animate.min.js"></script>
        <script src="~/lib/angular-aria/angular-aria.min.js"></script>
        <script src="~/lib/angular-messages/angular-messages.min.js"></script>

        <!-- Angular Material Library -->
        <script src="~/lib/angular-material/angular-material.min.js"></script>

        <!-- Aplication Scripts -->
        <script src="~/app/app.module.min.js" type="text/javascript"></script>
        <script src="~/app/app.route.min.js" type="text/javascript"></script>

        <!-- Aplication Controllers Scripts -->
        <script src="~/app/components/customers/customers.controller.min.js"></script>
        <script src="~/app/components/login/login.controller.min.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
